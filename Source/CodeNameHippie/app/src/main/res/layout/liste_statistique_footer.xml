<?xml version="1.0" encoding="utf-8"?>
<!-- Wrap pour placer les informations tel que voulu -->
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal">
	<!-- ENTETE: Valeur totale des dons -->
	<TextView
		android:id="@+id/tv_statistiques_valeur_total_titre"
		fontPath="fonts/opensans_semibold.ttf"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="0.1"
		android:paddingLeft="30dp"
		android:paddingRight="10dp"
		android:text="@string/tv_statistiques_valeur_total_titre"
		android:textSize="18dp"
		android:textStyle="bold"
		tools:ignore="MissingPrefix" />
	<!-- AFFICHER: La valeur totale des dons -->
	<TextView
		android:id="@+id/tv_statistiques_valeur_total"
		fontPath="fonts/opensans_semibold.ttf"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="0.1"
		android:paddingLeft="30dp"
		android:paddingRight="10dp"
		android:textSize="18dp"
		android:textStyle="bold"
		tools:ignore="MissingPrefix" />
</LinearLayout>