<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="10dp">
    <!-- Layout qui fait afficher l'enfant, donc les détails de la listview -->

    <!-- Icône pour l'adresse -->
    <ImageView
        android:id="@+id/iv_md_adresse_mini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/adresse_mini"
        android:contentDescription="@string/iv_md_adresse_mini"/>

    <!-- Wrapper pour le nom de l'entreprise et son adresse -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <!-- Nom de l'entreprise -->
        <TextView
            android:id="@+id/tv_md_nom_entreprise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_md_nom_entreprise" />

        <!-- Adresse de l'entreprise -->
        <TextView
            android:id="@+id/tv_md_adresse_entreprise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_md_adresse_entreprise" />
    </LinearLayout>

</LinearLayout>